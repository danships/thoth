{
	"name": "@thoth/backend",
	"private": true,
	"main": "dist/index.js",
	"type": "module",
	"scripts": {
		"build": "tsc",
		"start": "node dist/index.js",
		"dev": "tsc-watch --onSuccess \"node dist/index.js\"",
		"lint:tsc": "tsc --noEmit",
		"format:biome": "biome check --write --config-path=biome.json .",
		"lint:biome": "biome check --config-path=biome.json .",
		"better-auth:generate": "npx @better-auth/cli generate --config ./dist/modules/auth/better-auth.js --output schema.sql",
		"clean": "rimraf dist",
		"scripts:clear-auth": "tsx scripts/clear-auth.ts"
	},
	"dependencies": {
		"@thoth/types": "workspace:*",
		"better-auth": "^1.3.27",
		"cors": "^2.8.5",
		"dotenv": "^17.2.3",
		"envalid": "^8.1.0",
		"express": "^5.1.0",
		"kysely": "^0.28.8",
		"mysql2": "^3.15.2",
		"supersave": "^0.20.0",
		"winston": "^3.18.3",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.3",
		"tsc-watch": "^7.2.0",
		"tsx": "^4.20.6"
	}
}
